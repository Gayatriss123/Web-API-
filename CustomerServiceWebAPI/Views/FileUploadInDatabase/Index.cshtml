<!DOCTYPE html>
<html>
<head runat="server">
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>

        <div class="form-group">
            <input type="file" id="myfile" multiple />
        </div>
        <input id="btn1" class="btn btn-default" type="button" value="Upload" />
        <br /><br />
        <a href="/FileUploadInDatabase/DownloadImage">DownLoad Image from Database</a>
    </div>
</body>
</html>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            if ($('#myfile').val() == '') {
                alert('Please select file');
                return;
            }
            debugger
            var fileUpload = $("#myfile").get(0);
            var files = fileUpload.files;
            var formData = new FormData();
            // if there are multiple files , loop through each files
            for (var i = 0; i < files.length; i++) {
                formData.append(files[i].name, files[i]);
            }
            //var file = $('#myfile')[0];
            //formData.append('file', file.files[0]);
            $.ajax({
                url: '/FileUploadInDatabase/AddFileInDatabase',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
            });
        });
    });
</script>

